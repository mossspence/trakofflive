{% extends "base.html.twig" %}
{% block title %}Loader Settings{% endblock %}
{% block content %}

{% include 'admin.navig.html.twig' %}


    <div class="page-header alert alert-warning" id="content">
      <div class="container">
        <h3><span class="glyphicon glyphicon-cog"></span> Settings</h3>
        <p>Change any of these settings to your personal preferences. You really should know
        what the fu<span class="glyphicon glyphicon-cog"></span>k you're doing if you change anything other than the folder names.</p>
      </div>
    </div>            
        
    
    <div id="mainContent">    
        
        <div class="container">
            <div id="settingsInfo">   
            
                <div class="alert alert-info alert-dismissable" data-bind="visible: updateMessage"> <!-- style="display:none;" -->
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <span data-bind="text: updateMessage" ></span>
               </div>
            
            <div class="whatever"> <!-- used to be class="well" -->                
                
                <form class="form-horizontal" role="form" style="background: transparent;" data-bind="submit: updateSettings"><!-- ng-submit="updateSettings()"  -->
                    <div class="form-group input-group-sm">
                        <label for="baseDir" class="col-sm-4 control-label">Music Folder</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="baseDir" data-bind="value: baseDir" placeholder="Root Music Folder"> <!-- ng-model="baseDir" -->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="maxSeconds" class="col-sm-4 control-label">Execution Time</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="maxSeconds" data-bind="value: maxSeconds" placeholder="time spent analyzing a file"><!-- ng-model="maxSeconds" -->
                            <!--span class="input-group-addon">seconds</span-->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="coverDir" class="col-sm-4 control-label">Covers Folder</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="coverDir" data-bind="value: coverDir" placeholder="folder to hold cover images"><!-- ng-model="coverDir" -->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="thumbSize" class="col-sm-4 control-label">Cover Thumb Size</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="thumbSize" data-bind="value: thumbSize" placeholder="pixels"><!-- ng-model="thumbSize" -->
                            <!--span class="input-group-addon">pixels</span-->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="maxFileSize" class="col-sm-4 control-label">Max Song bytes</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="maxFileSize" data-bind="value: maxFileSize" placeholder="Maximum File Size (bytes)"><!-- ng-model="maxFileSize" -->
                            <!--span class="input-group-addon">pixels</span-->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="textBatchFile" class="col-sm-4 control-label">CSV Processing File</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="textBatchFile" data-bind="value: textBatchFile" placeholder="CSV File for Text Processing"><!-- ng-model="textBatchFile" -->
                            <!--span class="input-group-addon">pixels</span-->
                        </div>
                    </div>                    
                    <div class="form-group input-group-sm">
                        <label for="residentDJ" class="col-sm-4 control-label">Resident DJ Email</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="textBatchFile" data-bind="value: residentDJ" placeholder="Put (your) Resident DJ (admin) Email Address here"><!-- ng-model="textBatchFile" -->
                            <!--span class="input-group-addon">pixels</span-->
                        </div>
                    </div>                    

                    <div class="form-group input-group-sm">
                        <label for="DJSMSaddress" class="col-sm-4 control-label">Resident SMS</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="textBatchFile" data-bind="value: DJSMSaddress" placeholder="Put your SMS style email address here"><!-- ng-model="textBatchFile" -->
                            <!--span class="input-group-addon">pixels</span-->
                        </div>
                    </div>                    
                    
                    <div class="form-group input-group-sm">
                        <div class="col-sm-offset-4 col-sm-8">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="startFresh" name="refresh" id="refresh" data-bind="checked: refresh" />> Start Fresh (wipes everything)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-default">Save Settings  &raquo;</button>
                        </div>
                    </div>    
                </form>
            </div>
            </div>      
        </div> <!-- /container -->

    </div>


{% endblock content %}
{% block jscript %}
        <script src="../js/settings.js"></script>
{% endblock jscript %}