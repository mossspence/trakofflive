{% extends "base.html.twig" %}
{% block title %}User Settings{% endblock %}
{% block content %}

{% include 'navig.html.twig' %}


    <div class="page-header alert alert-info" id="content" style="background-color: #6f5499; color: #fff;">
      <div class="container">
        <h3><span class="glyphicon glyphicon-heart"></span> Customize your Playlist</h3>
        <p>Enter the #hashtagTitle for your event.</p>
        <p>Optional: select some paramaters to get your search started off right.</p>
      </div>
    </div>
        
    <div id="mainContent">    
        <div class="container">
            <div id="UserSettingsInfo">
            
                <div class="alert alert-success alert-dismissable" data-bind="visible: updateMessage">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <span data-bind="text: updateMessage" ></span>
               </div>

                <div class="contentInfoContainer">            
                <form class="form-horizontal" role="form" style="background: transparent;" data-bind="submit: saveUserSettings"><!-- ng-submit="updateSettings()"  -->
                    <div class="form-group input-group-sm">
                        <label for="playlistHashTag" class="col-sm-4 control-label">Event Hashtag</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="playlistHashTag" data-bind="value: playlistHashTag, valueUpdate: 'input'" placeholder="Event Hashtag (check with the Event Organizer)"> <!-- ng-model="eventHashtag" -->
                        </div>
                    </div>                
                    <div class="form-group input-group-sm">
                        <label for="playlistLength" class="col-sm-4 control-label">Playlist Length (minutes)</label>
                        <div class="col-sm-8">
                            <input type="range" class="form-control" id="playlistLength" min=15 max=65 placeholder="Approx. time length in minutes" step="5" onchange="playlistTime.value=value" /> <output id="playlistTime" data-bind="value: playlistTime, valueUpdate: 'input'" ></output><!-- ng-model="startingBPM" -->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="startingBPM" class="col-sm-4 control-label">Starting BPM</label>
                        <div class="col-sm-8">
                            <input type="range" class="form-control" id="startingBPM" min=58 max=163 step="5" onchange="playlistBPM.value=value" /> <output id="playlistBPM" data-bind="value: playlistBPM" ></output> <!-- ng-model="startingBPM" -->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="startingKeyCode" class="col-sm-4 control-label">Starting Keycode</label>
                        <div class="col-sm-8">
                            <input type="range" class="form-control" id="startingKeyCode" min=1 max=24 step="1" onchange="playlistKey.value=value" /> <output id="playlistKey" data-bind="value: playlistKey, valueUpdate: 'input'"></output> <!-- ng-model="startingKeyCode" -->
                        </div>
                    </div>  
                    <div class="form-group input-group-sm" style="display: none;">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-default">Save Info  &raquo;</button>
                        </div>
                    </div>
                </form>
                </div>
            </div>      
        </div> <!-- /container -->     

    </div>
{% endblock content %}
{% block jscript %}
        <script src="../js/usersettings.js"></script>
{% endblock jscript %}