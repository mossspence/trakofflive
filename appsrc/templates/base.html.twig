<!DOCTYPE html>
<html lang="EN">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.5, minimum-scale=0.75">
        <link rel="shortcut icon" href="/favicon.ico">

        <script type='text/javascript' src="../bower_components/jquery/dist/jquery.min.js"></script>

        <!-- Include the heartcode canvasloader js file -->
        <script type='text/javascript'  src="../bower_components/CanvasLoader/js/heartcode-canvasloader-min.js"></script>
        
        <!-- Bootstrap core CSS -->
        <link href="../bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Playlist Rules -->
        <link href="../css/playlist-app.css" rel="stylesheet">

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
        
        
        <title>DJ Playlist Tools: {% block title %}{% endblock title %}</title>
{% block localCSS %}{% endblock localCSS %}
    </head>
{% include 'googlea.html.twig' %}    
    <body>

{% block content %}{% endblock content %}
    
{% if 'about' != folder %}
        <div id="footer">
            <div class="container">
                <div class="row" style="margin-top: 5px;">
                    <div class="col-xs-4 col-sm-4">
                        <span id="sumTimeSongs" class="badge" style="color: #fff;">Playlist Time: </span>
                    </div>
                    <div class="col-xs-4 col-sm-4">
                        <p style="text-align: center" class="small" id="lastSongAdded"></p>
                    </div>
                    <div class="col-xs-4 col-sm-4">
                        <span id="numSongs" class="badge" style="color: #fff; float:right;">Songs: </span>
                    </div>
                </div>                  
                <!--
                <div style="float: left;"><span id="sumTimeSongs">Playlist Time: </span></div>
                <div style="float: left;"><p style="text-align: center"  id="lastSongAdded"></p></div>
                <div style="float: right;"><span id="numSongs" class="badge">Songs: </span></div>
                -->
            </div>
        </div>
        
{% endif %}  
    <div id="canvasloader-container" class="wrapper"></div>
      
        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->

        <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js" type='text/javascript'></script>
        <script src="/js/knockout-3.0.0.js" type='text/javascript'></script>
        <script src="../bower_components/modernizr/modernizr.js"></script>
        <script src="../bower_components/slip/slip.js"></script>
        <!-- script src="../bower_components/store/dist/store2.min.js"></script -->
        <script src="../js/store.min.js"></script>
        <script src="../js/songSlipLocalStorage.js"></script>
        <script src="../js/searchmusica.js"></script>
        <script type="text/javascript">
            var spinner = ShowWaitSpinner();
        </script>
{% block jscript %}{% endblock jscript %}        
    </body>
</html>
