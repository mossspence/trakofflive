{% extends "base.html.twig" %}
{% block title %}Export{% endblock %}
{% block content %}

{% include 'navig.html.twig' %}


    <div class="page-header alert alert-info" id="content">
      <div class="container">
        <h3><span class="glyphicon glyphicon-headphones"></span> Export Playlist</h3>
        <p>Save a name and some comments for your playlist and the resident DJ 
            will mix it for your event or upload it for your listening pleasure.</p>
        <p>Peace.</p>
      </div>
    </div>
        
    <div id="mainContent">    
        <div class="container">
            <div id="ExportInfo">
            
                <div class="alert alert-success alert-dismissable" data-bind="visible: updateMessage">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <span data-bind="text: updateMessage" ></span>
               </div>
            
                <div class="contentInfoContainer">            
                <form class="form-horizontal" role="form" style="background: transparent;" data-bind="submit: postlist"><!-- ng-submit="updateSettings()"  -->
                    <div class="form-group input-group-sm">
                        <label for="playlistTitle" class="col-sm-4 control-label">Playlist Title</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="playlistTitle" data-bind="value: playlistTitle, valueUpdate: 'input'"  placeholder="Playlist Title" required> <!-- ng-model="playlistTitle" -->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="playlistComments" class="col-sm-4 control-label">Comments</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="2" id="playlistComments" data-bind="value: playlistComments, valueUpdate: 'input'"  placeholder="Comments for the DJ"></textarea><!-- ng-model="playlistComments" -->
                        </div>
                    </div>
                    <div class="form-group input-group-sm">
                        <label for="playlistHashTag" class="col-sm-4 control-label">Event Hashtag</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="playlistHashTag" data-bind="value: playlistHashTag, valueUpdate: 'input'" placeholder="Event Hashtag (check with the Event Organizer)"> <!-- ng-model="eventHashtag" -->
                        </div>
                    </div>                    
                    <div class="form-group input-group-sm">
                        <label for="playlistEmail" class="col-sm-4 control-label">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="playlistEmail" data-bind="value: playlistEmail, valueUpdate: 'input'"  placeholder="Your email addess which will be your username." required> <!-- ng-model="playlistEmail" -->
                        </div>
                    </div>
                    <div class="form-group input-group-sm" data-bind="with: songList().length > 0">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-default">Submit Playlist  &raquo;</button>
                        </div>
                    </div>
                    <div class="form-group input-group-sm" id="playlistDiv">
                        <label for="playlist" class="col-sm-4 control-label">Playlist</label>
                        <div class="col-sm-8 highlight" id="playListScroll"  data-bind="css: { scrollme: songList().length > 3 }">
                            <pre><code id="playlistSongs">{% if m3u8list %}{{ m3u8list|raw }};{% endif %}</code></pre>                            
                        </div>
                    </div>
                </form>
                </div>
            </div>      
        </div> <!-- /container -->     

    </div>
{% endblock content %}
{% block jscript %}
        <script src="../js/export.js"></script>
{% endblock jscript %}